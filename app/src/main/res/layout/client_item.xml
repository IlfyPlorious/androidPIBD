<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="8dp"
    app:cardCornerRadius="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/secondaryBackground"
        android:orientation="vertical"
        android:padding="8dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/displayedLayoutClientItem">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="nume"
                    android:id="@+id/numeClientItem"
                    android:textSize="30dp"
                    android:padding="8dp"
                    android:textColor="@color/primaryColor"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="prenume"
                    android:id="@+id/prenumeClientItem"
                    android:textSize="30dp"
                    android:padding="8dp"
                    android:paddingStart="0dp"
                    android:textColor="@color/primaryColor"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:textColor="@color/primaryColor"
                android:text="contact"
                android:id="@+id/contactClientItem"
                android:padding="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="apasa pentru a extinde"
                android:padding="8dp"
                android:textSize="12dp"
                android:textStyle="italic"
                android:id="@+id/extindeLabelClientItem"
                android:textColor="@color/primaryBackground"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/hiddenLayoutClientItem">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Adresa: "
                    android:textSize="25dp"
                    android:padding="8dp"
                    android:textColor="@color/primaryBackground"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="adresa ...."
                    android:textSize="25dp"
                    android:textColor="@color/primaryColor"
                    android:id="@+id/adresaClientItem"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Varsta: "
                    android:textSize="25dp"
                    android:padding="8dp"
                    android:textColor="@color/primaryBackground"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="varsta ...."
                    android:textSize="25dp"
                    android:textColor="@color/primaryColor"
                    android:id="@+id/varstaClientItem"
                    />

            </LinearLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="Abonament premium: "
                        android:textColor="@color/primaryBackground"
                        android:textSize="25dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="abonament ...."
                        android:textSize="25dp"
                        android:textColor="@color/primaryColor"
                        android:id="@+id/premiumClientItem"
                        />

                </LinearLayout>

            </HorizontalScrollView>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/editBtnItemClient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="Edit"
                android:textAllCaps="false"
                android:backgroundTint="@color/highlightColor"/>

            <Button
                android:id="@+id/deleteBtnItemClient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="Delete"
                android:textAllCaps="false"
                android:backgroundTint="@color/alertColor"/>

        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>