<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/secondaryBackground"
    app:cardCornerRadius="5dp"
    android:layout_margin="8dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tranzactie nr."
                android:textSize="30dp"
                android:padding="8dp"
                android:textColor="@color/primaryColor"
                android:id="@+id/nrTranzactieItem"/>

        </HorizontalScrollView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primaryColor"
            android:textSize="25dp"
            android:text="Client: "
            android:padding="8dp"
            android:id="@+id/clientTranzactieItem"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primaryColor"
            android:textSize="25dp"
            android:text="Farmacie: "
            android:padding="8dp"
            android:id="@+id/farmacieTranzactieItem"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primaryColor"
            android:textSize="25dp"
            android:text="Data: "
            android:padding="8dp"
            android:id="@+id/dataTranzactieItem"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/vizualizeazaBtnTranzactii"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="Vizualizeaza"
                android:textAllCaps="false"
                android:backgroundTint="@color/highlightColor"/>

            <Button
                android:id="@+id/deleteBtnTranzactii"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="Delete"
                android:textAllCaps="false"
                android:backgroundTint="@color/alertColor"/>
        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>