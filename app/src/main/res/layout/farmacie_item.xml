<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="8dp"
    app:cardCornerRadius="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/secondaryBackground"
        android:orientation="vertical"
        android:padding="8dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nume"
                android:id="@+id/numeItemFarmacie"
                android:textSize="30dp"
                android:textColor="@color/primaryColor"
                android:layout_alignParentTop="true"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/numeItemFarmacie"
                android:id="@+id/fial"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Adresa: "
                    android:textSize="25dp"
                    android:textColor="@color/primaryBackground"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="adresa ...."
                    android:textSize="25dp"
                    android:textColor="@color/primaryColor"
                    android:id="@+id/adresaItemFarmacie"
                    />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/preparatFarmacieItem"
                android:text="Ofera preparate"
                android:textSize="25dp"
                android:textColor="@color/primaryColor"
                android:layout_below="@id/fial"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/naturisteFarmacieItem"
                android:text="Ofera medicamente naturiste"
                android:textSize="25dp"
                android:textColor="@color/alertColor"
                android:layout_below="@id/preparatFarmacieItem"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/editBtnItemFarmacie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="Edit"
                android:textAllCaps="false"
                android:backgroundTint="@color/highlightColor"/>

            <Button
                android:id="@+id/deleteBtnItemFarmacie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="Delete"
                android:textAllCaps="false"
                android:backgroundTint="@color/alertColor"/>

        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>